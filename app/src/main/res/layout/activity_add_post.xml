<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.AddPost">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_post_selectimage"
        style="@style/FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_post_img_"
        android:hint="Select Image" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_post_img_"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:background="@drawable/imageboarder" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_addpost"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_post_selectimage"
        android:layout_margin="20dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/post_title" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_location"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_addpost"
        android:layout_margin="20dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_post_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Location" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_postdesc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_imagename"
        android:layout_margin="20dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Description"

            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_imagename"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_location"
        android:layout_margin="20dp">


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_post_imagename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_postdesc"
            android:hint="Image Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_post_addpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_postdesc"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Add Post" />


</RelativeLayout>