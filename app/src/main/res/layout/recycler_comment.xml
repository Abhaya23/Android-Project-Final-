<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/rc_comment_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rc_comment_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/rc_comment_image"
            android:text="Abhaya"
            android:textAllCaps="true"
            android:textSize="20dp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rc_comment_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rc_comment_image"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="Eaa Hora malai ta taha tyena ni "
            android:layout_below="@id/rc_comment_username"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>